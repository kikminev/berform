{% extends 'Admin/layout.html.twig' %}
{% block body %}
<div class="container-fluid contextBar"><h1>{% trans %}admin_profile{% endtrans %}</h1></div>


<div class="container">
    <div class="contentEditForm row">
        <div class="col-sm-1 col-md-2"></div>

        <div class="col-sm-10 col-md-8 mt50">
            <h2>{% trans %}admin_profile_change_password{% endtrans %}</h2>
            {% for message in app.flashes('notice') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            {{ form_errors(form) }}


            <div style="display: none">{{ form_row(form.save) }}</div>
            {{ form_widget(form) }}

            {{ form_end(form) }}

            <a onclick="$('.contentEditForm').find('form').submit()" class="btn btn-primary btn-sm formButton">{% trans %}admin_button_save{% endtrans %}</a>

        </div>

        <div class="col-sm-1 col-md-2"></div>
    </div>
</div>

{% endblock %}




