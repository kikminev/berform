<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">

    <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
    <script src="{{ asset('js/slug-generator.js') }}"></script>
    <script src="{{ asset('js/admin/a.js') }}"></script>
    <script src="{{ asset('js/admin/ready.js') }}"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"/>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Abel&display=swap" rel="stylesheet">

    <link href="{{ asset('css/admin/style.css') }}" rel="stylesheet" />

</head>
<body>
    <div class="topMenu">
        <a href="{{ path('admin') }}" class="logo">s i t e m a x</a>

        <ul>
            <li><a href="{{ path('admin') }}"><i class="fas fa-home"></i>  {% trans %}admin_links_dashboard{% endtrans %}</a></li>
            <li><a href="{{ path('admin') }}"><i class="fas fa-mouse-pointer"></i>  {% trans %}admin_links_sites{% endtrans %}</a></li>
            <li><a href="{{ path('admin_profile_edit') }}"><i class="fas fa-user"></i> {% trans %}admin_links_profile{% endtrans %}</a></li>
            <li><a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> {% trans %}admin_links_logout{% endtrans %}</a></li>
           <div class="clear"></div>
        </ul>

        <div class="clear"></div>
    </div>

    <div class="mainContent">
        {% block body %}{% endblock %}
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>
