{% extends 'LandingSite/layout.html.twig' %}
{% block title %}{% trans %}main_site_login_login{% endtrans %}{% endblock %}

{% block body %}
<a id="logo" href="/" class="signUpPageLogo">b e r f o r m</a>
<div class="centeredForm loginForm">
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">{% trans %}main_site_login_login{% endtrans %}</h1>
        <label for="inputEmail" class="sr-only">{% trans %}main_site_login_email{% endtrans %}</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus />
        <label for="inputPassword" class="sr-only">{% trans %}main_site_login_password{% endtrans %}</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required />

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

        <button class="btn btn-lg btn-primary" type="submit">
            {% trans %}main_site_login_login{% endtrans %}
        </button>
    </form>

    <script>landingSite.setFullHeight('loginForm');</script>
</div>
{% endblock %}
